_cAlias := alias()
cbcont := 0
cbtxt := ""
wnrel := ""
cDesc1 :="Este programa ir  imprimir a relacao de pagamentos"
cDesc2 :="mensais efetuados (RASSOC2.PRX)"
cDesc3 :=""
cString := "SE5"
