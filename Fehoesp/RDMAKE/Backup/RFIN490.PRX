        @li, 0 PSAY  cMens2
        li := li+1
        @li, 0 PSAY  cMens3
        li := li+1
//      @li, 0 PSAY  cMens4
//      li := li+1
//      @li, 0 PSAY  cMens5
//      li := li+1

        @li, 0 PSAY "|"+Replicate("-",78)+"|"
        li := li+1
        @li, 0 PSAY "|"

        @li,002 PSAY substr(SA6->A6_NOME,1,30)
        @li,032 PSAY "|"
        @li,034 PSAY "COD.CONTABIL "
        @li,79 PSAY "|"
        li := li+1
        @li, 0 PSAY "|"+Replicate("-",78)+"|"
