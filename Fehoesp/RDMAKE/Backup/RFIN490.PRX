	IncRegua()

        IF EF_IMPRESS == "A"
           cBusca := xFilial()+SEF->EF_PREFIXO+SEF->EF_TITULO+SEF->EF_PARCELA+SEF->EF_TIPO+SEF->EF_FORNECE+SEF->EF_LOJA
        endif

        IF EF_IMPRESS $ "AC" .or. SubStr(EF_TIPO,1,2) == "TB"
           dbSkip()
           Loop
