titulo := "TITULOS A RECEBER JA QUITADOS"
cabec1 := "CODIGO NOME                                          PARCELA      VALOR PAGTO"
        // 123456 123456789012345678901234567890123456789012345  99/99  999.999,99 99/99/99
        // 0	  7						 54	61	   72
        //           10        20        30        40        50	       60	 70  
