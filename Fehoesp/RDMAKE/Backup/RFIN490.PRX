	@li, 0 PSAY Replicate("-",80)
        li := li+1
        @li,  0 PSAY "|  Numero Cheque: "+EF_NUM
        @li,056 PSAY Transform(EF_VALOR,"@E 9999,999,999.99")

	@li,79 PSAY "|"
        li := li+1
        @li,00 PSAY "|"
	@li,79 PSAY "|"
        li := li+1
        @li,00 PSAY "|"
	@li,79 PSAY "|"
        li := li+1

// EXTENSO( cVALOR,EXPRESSAO LOGICA,cVALOR2)
// EXPRESSAO LOGICA = .T. -QUANTIDADE, .F.-VALORES

        _cDescr := EXTENSO(EF_VALOR,.F.,,)
        @li, 0 PSAY "|      "+ substr( _cDescr,1,69)
	@li,79 PSAY "|"
        li := li+1
        @li, 0 PSAY "|  "+ substr( _cDescr,70)
	@li,79 PSAY "|"
        li := li+1
        @li, 0 PSAY "|"
	@li,79 PSAY "|"
        li := li+1

        @li, 0 PSAY "|  "+EF_BENEF
	@li,79 PSAY "|"
        li := li+1
        @li, 0 PSAY "|"
	@li,79 PSAY "|"
        li := li+1
        
        @li, 0 PSAY "|"
        @li,32 PSAY "SAO PAULO,"
        @li,43 PSAY DAY(EF_DATA) Picture "99" //DIA
        @li,47 PSAY "DE"
        Data()
        @li,50 PSAY cMes
        @li,66 PSAY "DE"
        @li,69 PSAY YEAR(EF_DATA) Picture "9999" //ANO

	@li,79 PSAY "|"
        li := li+1
        @li, 0 PSAY "|"+Replicate("-",78)+"|"

        li := li+1

        cMens1 := "|  S I N D H O S P   Sindicato dos Hospitais do Estado de Sao Paulo            |"
