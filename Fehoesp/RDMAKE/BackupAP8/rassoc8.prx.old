*------------------------------------------------------------------------*

_aEstr := {}
AADD(_aEstr,{"ERSIN"    , "C" , 02 , 0})
AADD(_aEstr,{"CODIGO"   , "C" , 06 , 0})
AADD(_aEstr,{"NOME"     , "C" , 45 , 0})
AADD(_aEstr,{"ANO"      , "C" , 04 , 0})
AADD(_aEstr,{"MES"      , "C" , 02 , 0})
AADD(_aEstr,{"VALOR"    , "N" , 17 , 2})
AADD(_aEstr,{"CEP"      , "C" , 08 , 2})
AADD(_aEstr,{"CNPJ"     , "C" , 14 , 0})

c_ArqImp := CriaTrab(_aEstr,.t.)

dbusearea(.t.,,c_ArqImp,"IMP",.T.)
dbselectarea("imp")

cArqIND := criatrab("",.f.)

//³ mv_par07                    // Ordem de EmissÆo              ³
//³                             // 1=NOME, 2=CEP, 3=CNPJ         ³

if mv_par06==2

   if mv_par07==1
      IndRegua("IMP",cArqIND,"NOME",,,"Selecionando Registros...")
   endif
   if mv_par07==2
      IndRegua("IMP",cArqIND,"CEP + NOME",,,"Selecionando Registros...")
   endif
   if mv_par07==3
      IndRegua("IMP",cArqIND,"CNPJ",,,"Selecionando Registros...")
   endif

else

   if mv_par07==1
      IndRegua("IMP",cArqIND,"ERSIN + NOME",,,"Selecionando Registros...")
   endif
   if mv_par07==2
      IndRegua("IMP",cArqIND,"ERSIN + CEP",,,"Selecionando Registros...")
   endif
   if mv_par07==3
      IndRegua("IMP",cArqIND,"ERSIN + CNPJ",,,"Selecionando Registros...")
   endif

endIf

//ÚÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
//³ Inicia a selecao dos titulos vencidos, somento dos           ³
//³ associados                                                   ³
//ÀÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ

dbselectarea('sa1')
dbsetorder(8)
dbseek( xFilial() + "000001" , .t. )

SetRegua(RecCount())

while !eof()
    IncRegua()

    *-----------------------------------------------*
    * Seleciona somente o que esta dentro dos parametros
    *-----------------------------------------------*

**    VerCateg:=.t.	    && Validar categoria adiante

**    if mv_par14 == 1  	    && Verifica se ‚ Filantropico
**       if a1_filant=="X" 
** 	  VerCateg:=.f.	    && Imprime Filantropico e nao valida Categoria
**       endif
**    endif

**    if mv_par14 == 2  	    && Verifica se ‚ NAO Filantropico
**       if a1_filant=="X" 
**          dbselectarea('sa1')
**          dbsetorder(8)
**          dbskip()
**          loop
**       endif
**    endif

    if a1_situac=="IS"     && Apenas Inativos                                                                                                                                                                                                                
       dbselectarea('sa1')
       dbsetorder(8)
       dbskip()
       loop
    endif

    if a1_ersin >= mv_par02 .and. a1_ersin <= mv_par03
    else
         dbselectarea('sa1')
         dbsetorder(8)
         dbskip()
         loop
    endif


    if .not. ( a1_categ1 >= mv_par04 .and. a1_categ1<=mv_par05 )  
       dbselectarea('sa1')
       dbsetorder(8)
       dbskip()
       loop
    endif


    _cCliente := a1_cod+a1_loja
    _cCodigo  := a1_codasso
    _cErsin   := a1_ersin
    _cNome    := a1_nome
    _cCep     := a1_cep
    _cCNPJ    := a1_cgc

    dbselectarea("se1")
    dbsetorder(2)
    dbseek(alltrim(xFilial('SE1')+_cCliente))
    if found() == .f.
         dbselectarea('sa1')
         dbsetorder(8)
         dbskip()
         loop
    endif

    while eof() == .f. .and. (e1_cliente+e1_loja) == _cCliente

         if alltrim(se1->e1_naturez) #'001'      // associativa
              dbselectarea('se1')
              dbsetorder(2)
              dbskip()
              loop
         endif


         if alltrim(substr(SE1->E1_PREFIXO,3,1)) == "T"	   // Termo Acordo

            dbselectarea('se1')
            dbsetorder(2)
            dbskip()
            loop

         endif

         if se1->e1_vencto > date()   // A vencer
            dbselectarea('se1')
            dbsetorder(2)
            dbskip()
            loop
         endif

         PCAtu:=val(substr(SE1->E1_NUM,1,2))
	 AnoAtu:= (substr(alltrim(SE1->E1_PREFIXO),1,2))
	 if val(AnoAtu)<10
	    AnoAtu:=val("20"+AnoAtu)
	 else
	    AnoAtu:=Val("19"+AnoAtu)
	 EndIf

         if PcAtu==13 .or. SE1->E1_PARCELA=="E"  && Parcela Especial
            dbselectarea('se1')
            dbsetorder(2)
            dbskip()
            loop
         endif

	 EmDia:=.t.
         if ( se1->e1_baixa == ctod('//') ) .AND. SE1->E1_VALOR > 1.00      // Se nao for Baixa por Termo de Acordo
            EmDia:=.f.
         endif

         dbselectarea("imp")
         reclock("imp",.t.)

         imp->ersin     := _cErsin
         imp->codigo    := _cCodigo
         imp->nome      := _cNome
         imp->cep       := _cCep
         imp->cnpj      := _cCnpj
         imp->ano       := str(AnoAtu,4)
         imp->mes       := strzero(PCAtu,2)

         if .Not. EmDia
            imp->valor  := -1	  && Em Debito no Periodo
         Else
            imp->valor  := se1->e1_valor
         EndIf

         MSUNLOCK()

         dbselectarea("se1")
         dbsetorder(2)
         dbskip()
    enddo

    dbselectarea('sa1')
    dbsetorder(8)
    dbskip()
enddo

dbselectarea("imp")
dbgotop()

nLinha := 80
nCliente := 0

nTotErs:=0
nErsAnt:=IMP->ERSIN

while eof() == .f.

    _cCliente := IMP->codigo
    _cErsin   := IMP->Ersin

    EmDia:=.t.
    nVencidas:=0

    while eof() == .f. .and. IMP->codigo == _cCliente

	 if IMP->VALOR==-1     && Debito no periodo
            EmDia:=.f.
	    nVencidas:=nVencidas+1
	 endif

         dbskip()

    enddo

    if nVencidas<mv_par01    && Seleciona Inadimplentes
       loop
    End If

    SA1->(dbsetorder(8))
    SA1->( dbseek( xFilial() + _cCliente ) )
    if SA1->(eof())
       loop
    EndIf

    if mv_par06==1 

       if nErsAnt<>_cErsin 
          if nTotErs>0

             @nLinha,00 PSAY replicate("-",limite)

             nLinha := nLinha + 1

             @nLinha,35 PSAY "ASSOCIADOS NO ERSIN  : "
             @nLinha,60 PSAY nTotErs picture '@e 999,999'

             nLinha := nLinha + 1

             @nLinha,00 PSAY replicate("-",limite)

	     nTotErs:=0
	     nLinha := 60
	  EndIf
	  nErsAnt:=IMP->ERSIN
       EndIf

       if nTotErs==0

          if nLinha >= 55
             cabec(titulo,cabec1,cabec2,nomeprog,tamanho,tipo)
             nLinha := prow() + 1
          endif

          @nLinha,00 PSAY replicate("-",limite)

          nLinha := nLinha + 1

          @nLinha,35 PSAY 'ERSIN: '	       
          @nLinha,45 PSAY _cErSin + " - " + TABELA("91",STRZERO(VAL(_cErSin),2)) 

          nLinha := nLinha + 1
          @nLinha,00 PSAY replicate("-",limite)
          nLinha := nLinha + 1

       EndIf

    EndIf


    if nLinha >= 55
         cabec(titulo,cabec1,cabec2,nomeprog,tamanho,tipo)
         nLinha := prow() + 1
    endif

    nCliente := nCliente + 1
    nTotErs  := nTotErs + 1


    @nLinha,000 PSAY SA1->A1_CODASSO
    @nLinha,007 PSAY SUBS(SA1->A1_NOME,1,45)
    @nLinha,054 PSAY SA1->A1_CGC PICTURE "@R 99.999.999/9999-99"
    @nLinha,081 PSAY SUBS(SA1->A1_END,1,40)
    @nLinha,124 PSAY SUBS(SA1->A1_MUN,1,15)
    @nLinha,141 PSAY SA1->A1_CEP PICTURE "@R 99999-999"
    @nLinha,152 PSAY SUBS(SA1->A1_TEL,1,13)
    @nLinha,166 PSAY SA1->A1_SITUAC
    @nLinha,177 PSAY SA1->A1_VALASSO PICTURE "@E 9999.99"

    nLinha := nLinha + 1

enddo

if mv_par06==1 .and. nTotErs>0

   @nLinha,00 PSAY replicate("-",limite)

   nLinha := nLinha + 1

   @nLinha,35 PSAY "ASSOCIADOS NO ERSIN  : "			       
   @nLinha,60 PSAY nTotErs picture '@e 999,999'

   nLinha := nLinha + 1
   nLinha := nLinha + 1

EndIf

nLinha := nLinha + 1

@nLinha,00 PSAY replicate("-",limite)

nLinha := nLinha + 1

@nLinha,35 PSAY 'TOTAL ASSOCIADOS: '			       
@nLinha,55 PSAY nCliente picture '@e 999,999'

nLinha := nLinha + 1

@nLinha,00 PSAY replicate("-",limite)

if nLinha <> 80
    roda(cbcont,cbtxt,tamanho)
else
    eject
endif

set device to screen

if aReturn[5] == 1
   set printer to
   dbcommit()
   ourspool(wnrel)                                  
