#INCLUDE "RWMAKE.CH"
#INCLUDE "TOPCONN.CH"
USER FUNCTION NUMASSOC()
XCOD := ""
if m->a1_situac $ "AS/CT"
	CQUERY := "SELECT MAX(A1_CODASSO) AS CODASSO FROM SA1010 WHERE D_E_L_E_T_='' AND A1_CODASSO<'009900'"
	TCQUERY cQuery NEW ALIAS "TRB"
	DBSELECTAREA("TRB")
	XCOD := STRZERO(VAL(TRB->CODASSO)+1,6)
	DBCLOSEAREA("TRB")
ENDIF         
DBSELECTAREA("SX7")
RETURN(XCOD)

